{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run FastAPI Backend",
      "type": "shell",
      "command": "cd backend; python -m uvicorn main:app --reload --port 8000",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run React Frontend",
      "type": "shell",
      "command": "cd frontend; npm start",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run Both (SmartBiz Fullstack)",
      "dependsOn": [
        "Run FastAPI Backend",
        "Run React Frontend"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Install Backend Dependencies",
      "type": "shell",
      "command": "cd backend; pip install -r requirements.txt",
      "problemMatcher": []
    },
    {
      "label": "Install Frontend Dependencies",
      "type": "shell",
      "command": "cd frontend; npm install",
      "problemMatcher": []
    }
  ]
}